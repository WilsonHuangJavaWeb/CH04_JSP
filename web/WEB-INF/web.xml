<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>configuration</servlet-name>
        <jsp-file>/configuration.jsp</jsp-file>
        <init-param>
            <param-name>message</param-name>
            <param-value>This is TEST message.</param-value>
        </init-param>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>configuration</servlet-name>
        <url-pattern>/configuration</url-pattern>
        <url-pattern>/configuration.jsp</url-pattern>
        <url-pattern>/configuration.html</url-pattern>
        <url-pattern>/configuration.php</url-pattern>
    </servlet-mapping>

</web-app>